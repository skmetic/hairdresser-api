  "main": "index.js",
  "scripts": {
    "build": "tsc --rootDir ./src/",
    "start": "ts-node src/index.ts",
    "start:debug": "ts-node --inspect=5858 --debug-brk --ignore false src/index.ts",
    "test": "mocha -w -r ts-node/register src/**/*.spec.ts",
